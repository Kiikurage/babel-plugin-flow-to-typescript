{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "preserveConstEnums": false,
    "esModuleInterop": true,
    "paths": {
      "babel-plugin-tester": [
        "./types/babel-plugin-tester.d.ts"
      ],
      "@babel/traverse": [
        "./types/babel-traverse.d.ts"
      ]
    },
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": [
    "./src/**/*.ts"
  ]
}
